@model IEnumerable<ListFileOnFileSystemViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col">
        <h1>Media Library</h1>
    </div>
</div>
<hr />

<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-3">

            <div class="card" style="width: 18rem;">
                <img src="~/@item.Path" class="card-img-top" alt="@item.Path">
                <div class="card-body">
                    <p>@Html.DisplayNameFor(model => model.CreatedAt): @item.CreatedAt</p>
                    <p>#ID: @item.Id</p>
                    <a data-toggle="modal" data-target="#confirmDeleteModal" asp-area="Admin" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Delete</a>
                </div>
            </div>
        </div>
    }

</div>

<partial name="_ConfirmDeleteModalPartial" />

@section Scripts {
    <script src="~/js/deleteResource.js"></script>
}
