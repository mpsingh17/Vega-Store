@model CreateVehicleViewModel

@{
    ViewData["Title"] = "Create Vehicle";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-4">

        <form enctype="multipart/form-data" asp-action="Create">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ModelId" class="control-label"></label>
                <select asp-for="ModelId" asp-items="@Model.ModelSLIs" class="form-control">
                    <option value="">Select Model</option>
                </select>
                <span asp-validation-for="ModelId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FeatureIds" class="control-label"></label>
                <select asp-for="FeatureIds" asp-items="@Model.FeatureSLIs"
                        class="form-control selectpicker" multiple title="Select Features" data-style="">
                </select>
                <span asp-validation-for="FeatureIds" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <select asp-for="Color" asp-items="Html.GetEnumSelectList<Colors>()" class="form-control">
                    <option selected="selected" value="">Select Color</option>
                </select>
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Condition" class="control-label"></label>
                <select asp-for="Condition" asp-items="Html.GetEnumSelectList<Condition>()" class="form-control">
                    <option selected="selected" value="">Select Condition</option>
                </select>
                <span asp-validation-for="Condition" class="text-danger"></span>
            </div>

            @*<div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsRegistered" /> @Html.DisplayNameFor(model => model.IsRegistered)
                </label>
            </div>*@

            <div class="form-group">
                <div class="custom-file">
                    <label asp-for="FeaturedImage" class="custom-file-label"></label>
                    <input asp-for="FeaturedImage" class="custom-file-input" />
                </div>
                <span asp-validation-for="FeaturedImage" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <div class="custom-file">
                    <label for="Gallery images" class="custom-file-label"></label>
                    <input asp-for="Images" class="custom-file-input" />
                </div>
                <span asp-validation-for="Condition" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>

    </div>
</div>

<div>
    <a asp-area="Admin" asp-action="Index">Back to List</a>
</div>

