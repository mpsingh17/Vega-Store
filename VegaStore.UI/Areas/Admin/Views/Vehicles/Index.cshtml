@section Scripts {
    <script src="~/js/deleteResource.js"></script>
    
    <script>
        $(document).ready(function () {

            $("#vehicles").DataTable({
                "processing": true,
                "serverSide": true,
                //"pageLength": 2,
                language: {
                    searchPlaceholder: "Search by name"
                },
                ajax: {
                    url: "@ViewData["GetVehiclesURL"]",
                    type: "POST",
                    contentType: "application/json",
                    data: function (d) {
                        return JSON.stringify(d);
                    }
                },
                "columns": [
                    { data: "id" },
                    {
                        data: "name",
                    },
                    {
                        data: "isRegistered",
                        searchable: false
                    },
                    {
                        data: "color",
                        searchable: false
                    },
                    {
                        data: "condition",
                        searchable: false
                    },
                    {
                        data: "price",
                        searchable: false
                    },
                    {
                        data: "model",
                        searchable: false
                    },
                    {
                        data: "createdAt",
                        searchable: false
                    },
                    {
                        data: "id",
                        orderable: false,
                        searchable: false,
                        render: function (data) {
                            return `<a class="btn btn-link" href="@ViewData["EditVehicleURL"]/${data}">Edit</a> |
                                <a class="btn btn-link" href="@ViewData["DetailVehicleURL"]/${data}">Details</a> |
                                <a data-toggle="modal" data-target="#confirmDeleteModal" href="@ViewData["DeleteVehicleURL"]/${data}">Delete</a>`;
                        }
                    }
                ]
            });
        });
    </script>
