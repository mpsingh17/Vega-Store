@model EditModelViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="@Model.Name" class="control-label"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.MakeId" class="control-label"></label>
                <select class="form-control"
                        asp-for="@Model.MakeId"
                        asp-items="@Model.MakeSLIs">
                    <option value="Select Make">Select Make</option>
                </select>
                <span class="text-danger" asp-validation-for="@Model.MakeId"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>

        <a class="btn btn-link" asp-area="Admin" asp-action="Index">Back to Models</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}